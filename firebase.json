{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "compiled",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/garden-tracker", "destination": "/garden-tracker.html" }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
